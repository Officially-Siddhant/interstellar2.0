<mujoco model="spacecraft_nd">
  <compiler angle="radian" inertiafromgeom="false"/>
  <option timestep="1e-3" gravity="0 0 0" integrator="implicit"/>
  <default>
    <joint armature="0.0" damping="0.0" stiffness="0"/>
    <geom contype="0" conaffinity="0" friction="0 0 0" rgba="0.8 0.6 0.4 1"/>
    <motor ctrllimited="true" ctrlrange="-100 100"/>
  </default>

  <worldbody>
    <!-- Just Debris...everywhere -->
    <body name="debris">
      <freejoint name="debris6dof"/>
      <!-- smaller visual than spacecraft -->
      <geom type="cylinder" size="0.0004 0.0006" rgba="0.9 0.9 0.2 1"/>

      <inertial pos="0.0 0.01 0" mass="1" diaginertia="1.0 1.0 1.0"/>      <site name="debris_com" pos="0 0 0" size="0.03" rgba="1 1 0 1" xyaxes="1 0 0 0 1 0"/>

      <geom name="debris_axis_x" type="capsule" fromto="0 0 0  0.12 0 0" size="0.006" rgba="1 0 0 1"/>
      <geom name="debris_axis_y" type="capsule" fromto="0 0 0  0 0.12 0" size="0.006" rgba="0 1 0 1"/>
      <geom name="debris_axis_z" type="capsule" fromto="0 0 0  0 0 0.12" size="0.006" rgba="0 0 1 1"/>
    </body>
  </worldbody>

  <actuator>
    <motor name="F_world_x" joint="debris6dof" gear="1 0 0 0 0 0"/>
    <motor name="F_world_y" joint="debris6dof" gear="0 1 0 0 0 0"/>
    <motor name="F_world_z" joint="debris6dof" gear="0 0 1 0 0 0"/>
    <motor name="M_body_x" joint="debris6dof" gear="0 0 0 1 0 0"/>
    <motor name="M_body_y" joint="debris6dof" gear="0 0 0 0 1 0"/>
    <motor name="M_body_z" joint="debris6dof" gear="0 0 0 0 0 1"/>
  </actuator>
</mujoco>
